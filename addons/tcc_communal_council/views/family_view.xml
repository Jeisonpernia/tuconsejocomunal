<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tcc_family_form" model="ir.ui.view">
            <field name="name">tcc.family.form</field>
            <field name="model">tcc.family</field>
            <field name="arch" type="xml">
                <form string="Familia">
                    <sheet>
                        <div class="oe_button_box" name="button_box"  >
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="active" widget="boolean_button"  options='{"terminology": "active"}' />
                            </button>
                        </div>
                        <group>
                            <field name="communal_council_id" options='{"no_create": True}'/>
                        </group>
                        
                        <group col="4" >
                            <field name="name" />
                            <field name="arrival_date" /> 
                            <field name="tenancy" /> 
                            <field name="type_dwelling" /> 
                        </group>
                        <group col="4" attrs="{'invisible': [('type_dwelling', '=', 'Casa')]}">
                            <field name="edifice_id" attrs="{'invisible': [('type_dwelling', '=', 'Casa')]}"/>
                            <field name="apartment_id" attrs="{'invisible': [('type_dwelling', '=', 'Casa')]}"/>
                            <field name="floor_id" attrs="{'invisible': [('type_dwelling', '=', 'Casa')]}"/>
                        </group>
                        <group>
                            <field name="house_id" attrs="{'invisible': [('type_dwelling', '=', 'Apartamento')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_tcc_family_tree" model="ir.ui.view">
            <field name="name">tcc.family.tree</field>
            <field name="model">tcc.family</field>
            <field name="arch" type="xml">
                <tree string="Family">
                    <field name="name"/>
                    <field name="type_dwelling"/>
                    <field name="arrival_date"/>
                </tree>
            </field>
        </record>
        
        <record id="action_view_tcc_family_form" model="ir.actions.act_window">
            <field name="name">Family</field>
            <field name="res_model">tcc.family</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="tcc_family_menu" 
            name="Familias" 
            parent="tcc_communal_coincil_menutop" 
            sequence="10"/>
        
        <menuitem id="tcc_family_action" 
            parent="tcc_family_menu" 
            action="action_view_tcc_family_form" 
            name="Familia" 
            sequence="5" />
        
    </data>
</odoo>
