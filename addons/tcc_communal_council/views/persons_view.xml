<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tcc_persons_form" model="ir.ui.view">
            <field name="name">tcc.persons.form</field>
            <field name="model">tcc.persons</field>
            <field name="arch" type="xml">
                <form string="Persona">
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="base.group_system">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="active" widget="boolean_button" options='{"terminology": "active"}' />
                            </button>
                        </div>
                        <group>
                            <field name="communal_council_id" options='{"no_create": "True"}' />
                            <field name="login" string="Correo electrÃ³nico" /> 
                            <field name="is_vocero"/>
                        </group>
                        <group col="4">
                            <field name="family_id" />
                            <field widget="mask_regex" data-inputmask-regex="[VE]-[0-9]{7,8}"  name="cedula" placeholder="V-12345678"/>
                            <field name="name" />
                            <field name="second_name" />
                            <field name="first_surname" />
                            <field name="second_surname" />
                            <field name="birthdate" />
                            <field name="age" />
                            <field name="civil_status" />
                            <field name="nationality" />
                            <field name="gender" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_tcc_persons_tree" model="ir.ui.view">
            <field name="name">tcc.persons.tree</field>
            <field name="model">tcc.persons</field>
            <field name="arch" type="xml">
                <tree string="Personas">
                    <field name="name"/>
                    <field name="cedula"/>
                    <field name="login"/>
                </tree>
            </field>
        </record>
        
        <record id="action_tcc_persons_form" model="ir.actions.act_window">
            <field name="name">Personas</field>
            <field name="res_model">tcc.persons</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="tcc_persons_menu" 
            name="Personas" 
            parent="tcc_communal_coincil_menutop" 
            sequence="20"/>
        
        <menuitem id="tcc_persons_action" 
            parent="tcc_persons_menu" 
            action="action_tcc_persons_form" 
            name="Personas" 
            sequence="5" />
        
    </data>
</odoo>
