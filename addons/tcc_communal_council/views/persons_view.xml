<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tcc_persons_form" model="ir.ui.view">
            <field name="name">tcc.persons.form</field>
            <field name="model">tcc.persons</field>
            <field name="arch" type="xml">
                <form string="Persona">
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="base.group_system">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="active" widget="boolean_button" options='{"terminology": "active"}' />
                            </button>
                        </div>
                        <group>
                            <field name="communal_council_id" options='{"no_create": "True"}' />
                            <field name="is_vocero" readonly="context.get('read_vocero')"/>
                            <field name="is_family_boss" readonly="context.get('read_vocero')"/>
                            <field name="login" readonly="context.get('read_vocero')"/>
                            <field name="name" invisible="True"/>
                        </group>
                        <group col="4">
                            <field widget="mask_regex" data-inputmask-regex="[VE]-[0-9]{7,8}"  name="cedula" placeholder="V-12345678" attrs="{'required': ['|',('is_family_boss', '=', True),('is_vocero', '=', True)]}" readonly="context.get('read_vocero')"/>
                            <field name="nationality" readonly="context.get('read_vocero')"/>
                            <field name="first_name" readonly="context.get('read_vocero')"/>
                            <field name="second_name" readonly="context.get('read_vocero')"/>
                            <field name="first_surname" readonly="context.get('read_vocero')"/>
                            <field name="second_surname" readonly="context.get('read_vocero')"/>
                            <field name="birthdate" readonly="context.get('read_vocero')"/>
                            <field name="age" readonly="context.get('read_vocero')"/>
                            <field name="civil_status" readonly="context.get('read_vocero')"/>
                            <field name="gender" readonly="context.get('read_vocero')"/>
                            <field name="level_instruccion" readonly="context.get('read_vocero')"/>
                            <field name="have_work" readonly="context.get('read_vocero')"/>
                            <field name="type_family_income" attrs="{'required': [('have_work', '=', 'Si')]}" readonly="context.get('read_vocero')" />
                            <field name="profession_id" readonly="context.get('read_vocero')" />
                            <field name="monthly_income" readonly="context.get('read_vocero')" />
                            
                            <field name="bank_account" readonly="context.get('read_vocero')" />
                            <field name="credit_card" readonly="context.get('read_vocero')" />
                            <field name="cesta_ticket" readonly="context.get('read_vocero')" />
                            <field name="registered_cne" readonly="context.get('read_vocero')" />
                            <field name="workplace" readonly="context.get('read_vocero')" />
                            <field name="kinship_id" attrs="{'invisible': [('is_family_boss', '=', True)], 'required': [('is_family_boss', '=', False)]}" readonly="context.get('read_vocero')" />
                            <field name="name_workplace" attrs="{'invisible': [('workplace', '!=', 'other')]}" readonly="context.get('read_vocero')" />
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        
        <record id="view_tcc_persons_tree" model="ir.ui.view">
            <field name="name">tcc.persons.tree</field>
            <field name="model">tcc.persons</field>
            <field name="arch" type="xml">
                <tree string="Personas">
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="level_instruccion"/>
                    <field name="profession_id"/>
                </tree>
            </field>
        </record>
        
        
        <record id="tcc_action_persons_vocero" model="ir.actions.act_window">
            <field eval="10" name="sequence"/>
            <field name="name">Voceros</field>
            <field name="res_model">tcc.persons</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tcc_persons_form"/>
        </record>
        
        <record id="tcc_action_persons_vocero_from2" model="ir.actions.act_window">
            <field eval="10" name="sequence"/>
            <field name="name">Voceros</field>
            <field name="res_model">tcc.persons</field>
            <field name="view_type">form</field>
            <field name="act_window_id" ref="tcc_action_persons_vocero"/>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_vocero','=',True)]</field>
            <field name="context">{'read_vocero': True}</field>
        </record>
        
        
        
        <menuitem id="tcc_persons_voceros_menu" 
            name="Voceros" 
            parent="tcc_communal_coincil_menutop" 
            sequence="9"/>
        
            
        <menuitem id="tcc_persons_action_voveros2" 
            parent="tcc_persons_voceros_menu" 
            action="tcc_action_persons_vocero_from2" 
            name="Lista de Voceros" 
            sequence="10" />
        
    </data>
</odoo>
