        <record id="action_tcc_dwelling_form" model="ir.actions.act_window">
            <field name="name">Vivienda</field>
            <field name="res_model">tcc.dwelling</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
